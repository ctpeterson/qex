# Hand off build commands to Nim
# This will run the config.nims script in the build directory unless it has been overridden
# Extra arguments to 'nim' can be provided in NIMFLAGS, e.g.
#   make NIMFLAGS="--rangeChecks:on --assertions:on" <myprog>

NIM = @@NIM
NIMFLAGS = 

runNim:
	@echo "Passing build commands to Nim"
	$(NIM) $(NIMFLAGS) Makefile.nims $(MAKECMDGOALS)

$(MAKECMDGOALS): runNim
	@ # do nothing silently

.PHONY: runNim $(MAKECMDGOALS)
